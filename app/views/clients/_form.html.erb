
<%= form_for @client, :html => {:class => "form-horizontal"} do |f| %>



  <div class="col-md-4">
    <%= f.text_field :client_reg_id, :class=>"form-control", :placeholder=>"Client ID" %>
  </div>
  <div class="col-md-4">
      <%= f.text_field :name, :class=>"form-control", :placeholder=>"Full Name" %>
  </div>
  <div class="col-md-4">
     <%= f.date_field :dateofbirth, :class=>"form-control", :placeholder=>"D.O.B" %>
  </div>
  <br><br>

  <div class="col-md-4">
       <%= f.select(:gender, Client::GENDER) %>
  </div>
  <div class="col-md-4">
     <%= f.text_field :email, :class=>"form-control", :placeholder=>"Email" %>
  </div>
  <div class="col-md-4">
      <%= f.text_field :phone, :class=>"form-control", :placeholder=>"Phone" %>
  </div>
  <br><br>



  <div class="col-md-4">
    <%= f.text_field :address, :class=>"form-control", :placeholder=>"Address" %>
  </div>
  <div class="col-md-4">
      <%= f.text_field :company, :class=>"form-control", :placeholder=>"Company" %>
  </div>
  <div class="col-md-4">
    <%= f.select(:client_category, Client::CLIENT_CATEGORY) %>
  </div>
  <br><br>


  <div class="col-md-4">
      <%= f.select(:client_type, Client::CLIENT_TYPE) %>
  </div>

  <div class="col-md-4">
      <%= f.text_area :additional_note, :class=>"form-control", :placeholder=>"notes"  %>  
  </div>
  <div class="col-md-4">
     <%= f.submit :class=>"btn btn-success" %>
    </div>


  
<% end %>

